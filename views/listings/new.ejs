<% layout("/layouts/boilerplate.ejs") %>

<body>
    <div class="rown offset-2"><br>
        <h3>Create a new Listing</h3>
        <div class="col-8">
            <form method="POST" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label mt-3">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter Title" class="form-control" required>
                    <!--by doing this we are making a listing object title is its key and it will hahve some value-->
                    <div class="valid-feedback">Title looks good</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter description" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">Please enter s short description</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input type="text" name="listing[image]" placeholder="Enter Image URL/link" class="form-control">
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Enter price" class="form-control" required>
                        <div class="invalid-feedback">Enter non negative price</div>
                    </div>

                    <div class="col-md-8 mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" placeholder="Enter country" class="form-control"
                            required>
                        <div class="invalid-feedback">Invalid Country</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="Enter location" class="form-control"
                        required>
                    <div class="invalid-feedback">Invalid Location</div>
                </div>

                <button class="btn btn-dark mt-3 add-btn">Add</button>
            </form>
        </div>
    </div>

</body>